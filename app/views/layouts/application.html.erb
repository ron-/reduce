<head>
  <meta charset="utf-8" />

  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width" />
  <title>Reduce App</title>

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <script type="text/javascript" src="//use.typekit.net/gca7sga.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <%= csrf_meta_tags %>
  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width" />
  <!-- typekit scripts-->

</head>
<body>
    <!-- Header and Nav -->
<div id='wrapper' class='photoborder'>

  <div class="row">
    <br>
    <div class="three columns">
      <%= image_tag('reduce.gif', :style => 'margin-left: -4px', :id =>'logo') %>
    </div>

    <div class="nine columns left">
      <ul class="nav-bar right">
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'All Products', products_path %></li>
        <li><%= link_to 'Add Product', new_product_path %></li>
        <li><%= link_to 'All Users', users_path %></li>
        <li><%= link_to 'Add User', new_user_path %></li>
      </ul>
    </div>

  </div> <!-- end row -->

  <!-- End Header and Nav -->

  <%= yield %>

  <!-- Footer -->

  <footer class="row">
    <div class="twelve columns">
      <hr />
      <div class="row">
        <div class="six columns">
          <p>&copy; Copyright 2013</p>
        </div>
        <div class="six columns">
          <ul class="link-list right">
            <li><%= link_to 'Home', root_path %></li>
            <li><%= link_to 'See Products', root_path %></li>
            <li><%= link_to 'Add Products', root_path %></li>
            <li><%= link_to 'New User', new_user_path %></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>




</div> <!-- end wrapper -->
</body>
</html>
